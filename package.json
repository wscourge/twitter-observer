{
  "name": "twitter-observer",
  "displayName": "twitter-observer",
  "version": "1.0.0",
  "author": "Wiktor Plaga",
  "description": "A chrome extension that observes your 𝕏 feed and gives you some basic stats on the posts you see.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "twitter",
    "𝕏",
    "react",
    "vite",
    "create-chrome-ext"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "fmt": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'",
    "lint:js": "prettier --config ./.prettierrc --check .",
    "lint:js:fix": "prettier --config ./.prettierrc --write .",
    "zip": "npm run build && node src/zip.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.19",
    "@types/chrome": "^0.0.246",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@vitejs/plugin-react": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-zip": "^6.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.11"
  }
}
